@import '../_variables'
@import '../_mixins'

// your styles here:
body
  background: #3D3D3D

.navbar-inverse
  border: none
  border-radius: 0

.navbar-brand
  display: block
  width: 50px
  height: 0
  padding: 50px 0 0 0
  overflow: hidden
  background-image: url('/images/boss.png')

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
  .navbar-brand
    background-image: url('/images/boss@2x.png')
    background-size: 50px 50px
