<div class="panel panel-default" data-hook="host-data">
  <div class="panel-heading" role="tab" id="headingOne">
    <h4 class="panel-title">System information</h4>
  </div>
  <div class="panel-body host-data">
    <table class="table table-striped table-bordered table-condensed">
      <tr>
        <th>Hostname</th>
        <td>{{model.hostname}}</td>
        <th>Type</th>
        <td>{{model.type}}</td>
      </tr>
      <tr>
        <th>Platform</th>
        <td>{{model.platform}}</td>
        <th>Arch</th>
        <td>{{model.arch}}</td>
      </tr>
      <tr>
        <th>Release</th>
        <td>{{model.release}}</td>
        <th>CPUs</th>
        <td data-hook="cpuSpeed">{{model.cpus.length}}x {{model.cpuSpeed}}</td>
      </tr>
      <tr>
        <th>Boss</th>
        <td>{{model.version}}</td>
        <th>Uptime</th>
        <td data-hook="uptime">{{model.uptimeFormatted}}</td>
      </tr>
    </table>
    <div data-hook="cpu-usage" style="min-width: 310px; height: 100px; margin: 0 auto; display: inline-block"></div>
    </svg>
  </div>
</div>